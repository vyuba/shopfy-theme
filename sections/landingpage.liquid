<section class="flex flex-col w-full  bg-black h-full md:h-screen overflow-hidden  ">
  {% comment %}
    <div class="w-full mx-4">
      <ul class="overflow-x-scroll flex-row no-scrollbar  flex items-center gap-4 whitespace-nowrap ">
        {% for collection in collections %}
          <li class="underline underline-offset-2 decoration-dotted text-xl font-bold capitalize hover:text-red-600 ">
            <p class="">
              {{ collection.title | link_to: collection.url | capitalize }}
            </p>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endcomment %}
  <div class="page-conatiner w-full overflow-hidden  h-full flex flex-col md:flex-row">
    {% for link in linklists['main-menu'].links %}
      {% if link.title == 'Magazine' %}
        <div class="screen  md:pb-8 flex flex-col w-full  md:w-1/2">
          <div class="relative w-full h-full  md:border-r border-white  text-white hover:text-red-600 bg-black">
            <a href="{{ link.url }}">
              <img
                src="{{ '416059130_18300274189181708_5071447815284573167_n.jpg' | asset_url }}{{ '415990198_18300274213181708_2894705610518394442_n.jpg' | asset_url }}"
                class="gradient-bg absolute inset-0 w-full h-full object-cover "
                height=""
                width=""
                alt="Background Image"
              >
              <div class="dark-gradient"></div>
              <div class="flex items-end  justify-center h-full pb-4 ">
                <h1 class="bold text-center bg-opacity-50 relative uppercase text-2xl  underline-offset-2 underline decoration-dotted  hover:underline  cursor-pointer">
                  buy {{ link.title }}
                </h1>
              </div>
            </a>
          </div>
          <div class="stock-ticker items-center sticky top-1  md:hidden bg-black text-red-500  overflow-hidden select-none flex gap-[var(--gap)] py-1 border-y border-white ">
            {% render 'infinite-scroll' %}
          </div>
        </div>
      {% endif %}
      {% if link.title == 'Merch' %}
        <div class="relative md:w-1/2 merch  md:h-full md:border-l text-white hover:text-red-600 border-white bg-black">
          <a href="{{ link.url }}">
            <video muted autoplay playsinline loop class="absolute inset-0 w-full h-full md:h-full object-cover">
              <source
                src="https://cdn.shopify.com/videos/c/o/v/e4efe6180cab47ca87ed301e22565a95.mp4"
                type="video/mp4"
              >
              <source
                src="https://cdn.shopify.com/videos/c/o/v/e4efe6180cab47ca87ed301e22565a95.mp4"
                type="video/mp4"
              >
            </video>
            <div class="flex items-end justify-center h-full pb-9 md:pb-4">
              <h1 class=" bold text-center bg-opacity-50 relative  uppercase text-2xl  font-sans underline-offset-2 underline decoration-dotted hover:underline  cursor-pointer">
                buy {{ link.title }}
              </h1>
            </div>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="stock-ticker hidden md:flex bg-black text-red-500 overflow-hidden select-none  gap-[var(--gap)] py-1 border-y border-white">
    {% render 'infinite-scroll' %}
  </div>
</section>
<style>
  :root {
    --vh: 100vh;
  }
  .dark-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50%; /* Adjust the height of the gradient */
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8));
  }
  .merch {
    height: calc(100vh - 80px);
  }
  @media (min-width: 768px) {
    .merch {
      height: 100%;
    }
  }
</style>

<script>
  // Function to update the custom property for the viewport height
  function updateVh() {
    let vh = window.innerHeight * 0.01;
    document.documentElement.style.setProperty('--vh', `${vh}px`);
  }

  // Update the custom property on load
  updateVh();

  // Update the custom property on resize
  window.addEventListener('resize', updateVh);
</script>
